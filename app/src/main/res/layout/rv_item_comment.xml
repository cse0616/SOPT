<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_rv_item_comment_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/img_rv_item_comment_thumbnail"
            android:layout_width="96dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_comment_name"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:text="이름"
                    android:textColor="#484848"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_rv_item_comment_date"
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:text="날짜"
                    android:textColor="#BBBBBB"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_rv_item_comment_comment"
                android:layout_width="235dp"
                android:layout_height="39dp"
                android:text="comment"
                android:textColor="#484848"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>