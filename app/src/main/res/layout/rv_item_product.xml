<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_rv_item_product_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_rv_item_product_thumbnail"
            android:layout_width="121dp"
            android:layout_height="85dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/txt_rv_item_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작품명"
                android:textColor="#484848"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_product_numview"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:text="조회수0"
                    android:textColor="#BBBBBB"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_rv_item_product_date"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="날짜"
                    android:textColor="#BBBBBB"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>